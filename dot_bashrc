[[ $- != *i* ]] && return

export HISTFILE="$XDG_DATA_HOME/bash/history"
shopt -s histappend

if [ -z "$PS1"  ]; then
  if [[ ${EUID} == 0 ]] ; then
    # show root@ when we don't have colors
    PS1='\u@\h \W \$ '
  else
    PS1='\u@\h \w \$ '
  fi
fi

source "$XDG_CONFIG_HOME/shell/config"    # general commands
source "$XDG_CONFIG_HOME/shell/config.local"       # local config
