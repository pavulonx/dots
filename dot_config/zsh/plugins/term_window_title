__title_precmd () {
  print -Pn "\e]0;%n@%m: %50<..<%~%<<\a"
}

__title_preexec () {
  print -Pn "\e]0;%n@%m: %50<..<%~%<<  [ ${1} ]\a"
}

term_window_title() {
  autoload -Uz add-zsh-hook;
  add-zsh-hook precmd __title_precmd;
  add-zsh-hook preexec __title_preexec;

}
case $TERM in
xterm*|rxvt*|alacritty|st*) term_window_title
;;
esac

# vi:syntax=zsh
