#!/usr/bin/env bash

shopt -s nullglob globstar

typeit=0
if [[ $1 == "--type" ]]; then
	typeit=1
	shift
fi

if [[ -n $WAYLAND_DISPLAY ]]; then
  dotool="ydotool type --file -"
elif [[ -n $DISPLAY ]]; then
  dotool="xdotool type --clearmodifiers --file -"
else
  echo "Error: No Wayland or X11 display detected" >&2
  exit 1
fi

prefix="${PASSWORD_STORE_DIR:-$HOME/.password-store}"
prefix="${prefix%%/}/"
password_files="$(find "$prefix" -type f -name '*.gpg' | sed "s|^${prefix}\(.*\).gpg"'$'"|\1|g")"

password=$(echo "$password_files" | rofi -p "password$(if [ "$typeit" = 1 ]; then echo " (type)"; fi)" -dmenu "$@")
[ -n $password ] || exit

pass_cmd="pass"
if [[ $password =~ .*\.otp$ ]]; then
  pass_cmd="pass otp"
fi

if [[ $typeit -eq 0 ]]; then
	$pass_cmd show -c "$password" 2>/dev/null
else
	$pass_cmd show "$password" | { IFS= read -r pass; printf %s "$pass"; } | $dotool
		xdotool type --clearmodifiers --file -
fi
