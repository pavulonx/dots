#!/bin/sh

_log() {
  echo "pwr: $1"
}

_help() {
  echo "Usage: sys <COMMAND>
  Available commands:
    help
    lock
    suspend
    reboot
    shutdown / poweroff

  Also avaiable when GUI session is running:
    dim                     - dim screen
    exit                    - exit session
  "
}

cmd="$1"
[ -z "$cmd" ] && _status && exit 0;

_log "command: '$cmd'"
case "$cmd" in
  -h|--help|help)     _help                       ;;
  status)             _status                     ;;

  lock)               loginctl lock-session       ;;
  suspend)            systemctl suspend   ;;
  reboot)             systemctl reboot    ;;
  shutdown|poweroff)  systemctl poweroff  ;;

  dim)
    if [ -n "$WAYLAND_DISPLAY" ]; then
      _log "dimming for waylad unsupported!"
      exit 1
    else
      xset dpms force off
    fi
    ;;
  exit)
    case "$DESKTOP_SESSION" in
      i3)     i3-msg exit ;;
      xmonad) xmonadctl quit-wm ;;
      bspwm)  bspc quit ;;
      dwm)    pkill dwm ;;
      *)      loginctl terminate-user ;;
    esac
    ;;
  *)
    _log "invalid argument: '$cmd'"
    _help
    exit 2
esac
