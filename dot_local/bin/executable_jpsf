#!/bin/sh
_preview_command="$(cat <<EOF
{
  echo "proc_cwd:$(pwdx 24956 | cut -d' ' -f2-)";
  echo "proc_usr:$(ps -p 24956 -o user=)";
  echo "proc_cmd:$(ps -p 24956 -o command=)";
  jcmd {1} VM.info | grep -E '^Command Line|^Time|^jvm_args|^java_command|^java_class_path|^vm_info'
} |

  sed '
    s/^Command Line:/10;\x1b[31;1mCMD line:\x1b[0m\\n11;/g
    s/^java_command:/20;\x1b[31;1mJava CMD:\x1b[0m\\n21;/g
    s/^jvm_args:/30;\x1b[31;1mJVM Args:\x1b[0m\\n31;/g
    s/^java_class_path[^:]*:/40;\x1b[31;1mJava ClassPath:\x1b[0m\\n41;/g
    s/^vm_info:/50;\x1b[31;1mJVM info:\x1b[0m\\n51;/g
    s/^Time:/60;\x1b[31;1mJVM time:\x1b[0m\\n61;/g
    s/^proc_cmd:/70;\x1b[31;1mProcess command:\x1b[0m\\n71;/g
    s/^proc_usr:/80;\x1b[31;1mProcess user:\x1b[0m\\n81;/g
    s/^proc_cwd:/90;\x1b[31;1mProcess working dir:\x1b[0m\\n91;/g
  ' |
  sort -n -k1.1,1.2 |
  cut -d';' -f2- |
  sed 's/^\s*//g'

EOF
)"

jps -lm | grep -Ev '^[0-9]+ jdk.jcmd/sun.tools.jps.Jps' \
  | fzf --reverse \
  --preview="$_preview_command" \
  --bind=ctrl-alt-j:preview-down --bind=ctrl-alt-k:preview-up \
  --preview-window=bottom:70%:wrap
