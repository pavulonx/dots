#!/bin/sh
power_options="
 lock
 dim
 exit
 suspend
 hibernate
 reboot
 shutdown
"
cmd="$(echo "$power_options" \
  | grep -v "^$" \
  | rofi -dmenu -i -no-custom -p "?" -theme-str 'listview { lines: 7; scrollbar: false; } window { width: 12%; }' \
  | awk '{print $2}')";

[ -z "$cmd" ] && exit 0;

pwr "$cmd"
