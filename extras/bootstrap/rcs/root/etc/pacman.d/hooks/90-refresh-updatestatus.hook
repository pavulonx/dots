# refresh updatestatus

[Trigger]
Operation = Install
Operation = Upgrade
Operation = Remove
Type = Package
Target = *

[Action]
Description = Refreshing updatestatus...
Depends = coreutils
When = PostTransaction
Exec = /bin/sh -c "runuser $(who | cut -d ' ' -f1 | uniq) -c 'command -v updatestatus >/dev/null && updatestatus -r >/dev/null'"
